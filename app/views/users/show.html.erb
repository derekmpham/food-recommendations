<h2>Hey <%= @user.username %>!</h2>

<br>
<br>

<h4>Recommendations:</h4>
<% @recommendations.each do |rec| %>
<p>Name: <%= rec.name %></p><br>
<p>Cuisine: <%= rec.cuisine %></p><br>
<p>City: <%= rec.city %></p><br>
<p>Description: <%= rec.description %></p><br>
<p>Address: <%= rec.address %></p><br>
<% address_url = rec.address.gsub(/[ ]/, '+') +  ",+" + rec.city %>
<p><iframe width="300" height="300" frameborder="0" style="border:0"
	src="https://www.google.com/maps/embed/v1/place?key=<%= ENV["GOOGLE_MAPS_EMBED_KEY"] %>&q=<%= address_url %>"
	allowfullscreen></p><br><br>
<p>Recommended by <%= rec.username %></p>
<br>
<br>
<br>
<% end %>

<br>
<br>

<%= link_to "Recommend a Place", new_recommendation_path %>

